<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:gravity="center"
    android:orientation="vertical" >
    
	
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:text="@string/text_whatAgeGroup"	
		android:textSize="14sp"
		android:layout_marginBottom="10dp"
	/>
	
	    
	<RelativeLayout
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:background="#CEF111"
		android:layout_margin="20dp"
	>
		<ImageView 
			android:layout_alignParentLeft="true"
		    android:id="@+id/img_10Group"
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:src="@drawable/ic_launcher"
		    android:contentDescription=""
		    android:tag="10"
		    			    
		/>
	  	
      	<ImageView
		    android:layout_below="@id/img_10Group"
		    android:id="@+id/img_30Group" 
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:src="@drawable/ic_launcher"
		    android:contentDescription=""
		    android:tag="30"
		/>
      	
      	<ImageView
		    android:layout_below="@id/img_30Group"
		    android:id="@+id/img_50Group" 
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:src="@drawable/ic_launcher"
		    android:contentDescription=""
		    android:tag="50"
		/>
      	
      	<ImageView
		    android:layout_below="@id/img_50Group"
		    android:id="@+id/img_70Group" 
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:src="@drawable/ic_launcher"
		    android:contentDescription=""
		    android:tag="70"
		/>
      	
      	<ImageView
		    android:layout_alignParentRight="true"
		    android:id="@+id/img_20Group" 
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:src="@drawable/ic_launcher"
		    android:contentDescription=""
		    android:tag="20"
		/>
      	
		<ImageView
		    android:layout_alignParentRight="true"
		    android:layout_below="@id/img_20Group"
		    android:id="@+id/img_40Group" 
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:src="@drawable/ic_launcher"
		    android:contentDescription=""
		    android:tag="40"
		/>
	
		<ImageView
		    android:layout_alignParentRight="true"
		    android:layout_below="@id/img_40Group"
		    android:id="@+id/img_60Group" 
		    android:layout_width="70dp"
		    android:layout_height="70dp"
		    android:src="@drawable/ic_launcher"
		    android:contentDescription=""
		    android:tag="60"
		/>
    	
	</RelativeLayout>

	 		
			
	    
	    
	

		
	<Button
  		android:id="@+id/btn_ageGroupInput"
     	android:layout_width="120dp"
     	android:layout_height="wrap_content"
     	android:text="@string/text_finish"
     	android:textColor="#FFFFFF"
     />
    
	
	
    
</LinearLayout>
